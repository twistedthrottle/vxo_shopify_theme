            {
              "value": "span-12",
              "label": "100%"
            },
            {
              "value": "span-6",
              "label": "50%"
            }
          ],
          "default": "span-12"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "label": "Color scheme",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "cs1",
              "label": "1"
            },
            {
              "value": "cs2",
              "label": "2"
            },
            {
              "value": "cs3",
              "label": "3"
            }
          ],
          "default": "cs2"
        }
      ]
    },
