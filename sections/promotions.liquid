        {
          "type": "text",
          "id": "button",
          "label": "Button text",
          "default": "Button"
        },
        {
          "type": "select",
          "id": "align_self",
          "label": "Align text",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "center",
