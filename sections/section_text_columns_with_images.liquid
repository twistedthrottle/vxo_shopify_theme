{% schema %}
{
      "name": "Text Columns with Images",
      "settings": [
        {
          "type": "text",
          "id": "txt_title",
          "label": "Heading",
          "default": "Text columns with images"
        },
        {
          "type": "select",
          "id": "txt_align_text",
          "label": "Text alignment",
          "default": "left",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Centered"
            }
          ]
        },
        {
          "type": "checkbox",
          "id": "txt_no_bottom_margin",
          "label": "No space after section",
          "default": false
        },
        {
          "type": "header",
          "content": "Column One"
        },
        {
          "type": "image_picker",
          "id": "txt_image_1",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "txt_link_1",
          "label": "Link",
          "info": "Optional"
        },
         {
          "type": "text",
          "id": "txt_title_text_1",
          "label": "Heading",
          "default": "Our collections"
         },
        {
          "type": "richtext",
          "id": "txt_text_1",
          "label": "Text",
          "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
        },
        {
          "type": "header",
          "content": "Column Two"
        },
        {
          "type": "image_picker",
          "id": "txt_image_2",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "txt_link_2",
          "label": "Link",
          "info": "Optional"
        },
         {
          "type": "text",
          "id": "txt_title_text_2",
          "label": "Heading",
          "default": "Our collections"
         },
        {
          "type": "richtext",
          "id": "txt_text_2",
          "label": "Text",
          "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
        },
        {
          "type": "header",
          "content": "Column Three"
        },
        {
          "type": "image_picker",
          "id": "txt_image_3",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "txt_link_3",
          "label": "Link",
          "info": "Optional"
        },
         {
          "type": "text",
          "id": "txt_title_text_3",
          "label": "Heading",
          "default": "Our collections"
         },
        {
          "type": "richtext",
          "id": "txt_text_3",
          "label": "Text",
          "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
        },
        {
          "type": "header",
